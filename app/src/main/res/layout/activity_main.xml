<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.raesatanyamaqfirah_1202154352_modul1.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="@string/title1"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tempat"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/menu"
        android:layout_alignStart="@+id/menu"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="18dp"
        android:text="@string/title2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Masukan Menu"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/menu"
        android:layout_alignStart="@+id/menu"
        android:layout_below="@+id/menu"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Porsi"
        android:inputType="number" />

    <Button
        android:id="@+id/eatbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jumlah"
        android:layout_alignStart="@+id/jumlah"
        android:layout_below="@+id/jumlah"
        android:layout_marginTop="37dp"
        android:background="@color/colorAccent"
        android:onClick="selectEatbus"
        android:text="@string/option1" />

    <Button
        android:id="@+id/abnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eatbus"
        android:layout_alignBottom="@+id/eatbus"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/colorAccent"
        android:onClick="selectAbnormal"
        android:text="@string/option2" />


</RelativeLayout>
